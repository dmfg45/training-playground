pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	parameters{
	    choice(name:'TOEXECUTE' choices: ['build', 'test'], description: 'Pick something')
	}
    stages {
        stage{
            when{
                environment name: 'TOEXECUTE', value: build
            }
            steps{
                sh "echo" 'Executing build stage'
            }

        }
        stage{
            when{
                environment name: 'TOEXECUTE', value: test
            }
            steps{
                sh "echo" 'Executing test stage'
            }
        }
    }
}